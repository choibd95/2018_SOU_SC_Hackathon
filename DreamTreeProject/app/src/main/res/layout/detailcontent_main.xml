<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kimjinhyeok.tree.dreamtreeproject.DetailActivity"
    tools:showIn="@layout/detail_bar_main"
    android:elevation="1dp"
    android:background="@android:color/background_light">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="37"
            >

            <fragment
                android:layout_width="match_parent"
                android:name="com.kimjinhyeok.tree.dreamtreeproject.simpleFragment"
                android:id="@+id/fragment"
                android:layout_alignBottom="@+id/nv1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="41"
            android:elevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/nv1"
                        android:background="@drawable/nvborder"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:paddingLeft="12dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="5"
                        android:layout_marginRight="6dp">
                        <!-- android:background="@drawable/kakao_login_button_background" -->


                        <ImageView
                            android:id="@+id/symbol"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_phone"

                            android:layout_width="36dp" />


                        <TextView
                            android:id="@+id/callnumber"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="left|center"
                            android:text="전화 하기"
                            android:textColor="@color/maincolor"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_width="160dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nv2"
                        android:gravity="center"
                        android:background="@drawable/nvborder"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:paddingLeft="12dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="5"
                        android:paddingRight="16dp"
                        android:layout_marginLeft="6dp">
                        <!-- android:background="@drawable/kakao_login_button_background" -->


                        <ImageView
                            android:id="@+id/symbol1"
                            android:layout_width="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_nv"

                            android:layout_height="40dp" />


                        <TextView
                            android:id="@+id/text1"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="left|center"
                            android:text="지도 보기"
                            android:textColor="@color/maincolor"
                            android:textStyle="bold"
                            android:layout_marginLeft="22dp"
                            android:textSize="18sp"
                            android:layout_width="160dp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_place"
                    android:id="@+id/imageView6"
                    android:layout_below="@+id/imageView20"
                    android:layout_alignLeft="@+id/imageView20"
                    android:layout_alignStart="@+id/imageView20"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_restaurant"
                    android:id="@+id/imageView10"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignLeft="@+id/imageView6"
                    android:layout_alignStart="@+id/imageView6"
                    android:layout_marginTop="10dp"  />

                <ImageView
                    app:srcCompat="@drawable/like"
                    android:id="@+id/imageView11"
                    android:layout_below="@+id/imageView10"
                    android:layout_alignLeft="@+id/imageView10"
                    android:layout_alignStart="@+id/imageView10"
                    android:layout_marginTop="10dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

                <ImageView
                    app:srcCompat="@drawable/distance"
                    android:id="@+id/imageView12"
                    android:layout_below="@+id/imageView11"
                    android:layout_alignLeft="@+id/imageView11"
                    android:layout_alignStart="@+id/imageView11"
                    android:layout_marginTop="10dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="10dp" />


                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_marginTop="26dp"
                    android:textSize="15sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/textView6"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_marginTop="26dp"
                    android:textSize="15sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/textView7"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_marginTop="27dp"
                    android:textSize="15sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/textView8"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_marginTop="28dp"
                    android:textSize="15sp" />

                <ImageView
                    app:srcCompat="@drawable/telephone"
                    android:id="@+id/imageView20"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="36dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:id="@+id/textView5"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="36dp"
                    android:layout_alignTop="@+id/imageView20"
                    android:layout_toRightOf="@+id/imageView20"
                    android:layout_toEndOf="@+id/imageView20"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="36">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/a1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <LinearLayout
                        android:gravity="bottom|center"
                        android:background="@drawable/nvborder"
                        android:padding="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/likeview"
                        android:layout_weight="5"
                        >
                        <!-- android:background="@drawable/kakao_login_button_background" -->


                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/like741"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/likebutton" />


                        <TextView
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="left|center"
                            android:textStyle="bold"
                            android:layout_width="140dp"
                            android:layout_marginLeft="36dp"
                            android:id="@+id/liketext"
                            android:textSize="15sp"
                            android:text="좋아요" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bg3"
                        android:gravity="bottom|center"
                        android:background="@drawable/nvborder"
                        android:padding="10dp"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/likeview"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="match_parent"
                        android:layout_weight="5"
                        >
                        <!-- android:background="@drawable/kakao_login_button_background" -->


                        <ImageView
                            android:id="@+id/symbo3"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/review2"

                            android:layout_width="40dp"
                            android:layout_height="40dp" />


                        <TextView
                            android:id="@+id/reviewsee"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="left|center"
                            android:hint="리뷰 보기"
                            android:textStyle="bold"
                            android:layout_width="140dp"
                            android:layout_marginLeft="36dp"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/a2">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom">

                    <LinearLayout
                        android:id="@+id/bg11"
                        android:layout_width="match_parent"
                        android:gravity="bottom|center"
                        android:background="@drawable/nvborder"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent">
                        <!-- android:background="@drawable/kakao_login_button_background" -->


                        <ImageView
                            android:id="@+id/symbols"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/review"

                            android:layout_width="40dp"
                            android:layout_height="40dp" />


                        <TextView
                            android:id="@+id/text"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="left|center"
                            android:hint="리뷰를 작성해주세요"
                            android:textStyle="bold"
                            android:layout_width="140dp"
                            android:layout_marginLeft="36dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
